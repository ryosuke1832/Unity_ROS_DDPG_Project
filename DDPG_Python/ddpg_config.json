{
  "system": {
    "lsl_stream_name": "MockEEG",
    "tcp_host": "127.0.0.1",
    "tcp_port": 12345,
    "tcp_response_port": 12346,
    "sampling_rate": 250,
    "enable_gpu": true,
    "device": "auto",
    "random_seed": 42
  },
  "classifier": {
    "model_path": "models/best_grip_force_classifier.pth",
    "csv_data_dir": "DDPG_Python/logs",
    "min_episodes_for_training": 10,
    "confidence_threshold": 0.5,
    "use_preprocessing": true,
    "enable_realtime_classification": true
  },
  "ddpg": {
    "state_dim": 5,
    "action_dim": 1,
    "hidden_dim": 128,
    "lr_actor": 0.0001,
    "lr_critic": 0.001,
    "gamma": 0.99,
    "tau": 0.001,
    "noise_std": 0.2,
    "noise_decay": 0.995,
    "min_noise_std": 0.01,
    "buffer_capacity": 100000,
    "batch_size": 64,
    "min_buffer_size": 1000,
    "update_frequency": 1,
    "target_update_frequency": 1
  },
  "environment": {
    "grip_force_min": 2.0,
    "grip_force_max": 30.0,
    "ideal_force_min": 8.0,
    "ideal_force_max": 15.0,
    "reward_success": 10.0,
    "reward_undergrip": -5.0,
    "reward_overgrip": -8.0,
    "reward_contact": 2.0,
    "reward_broken": -15.0,
    "reward_force_diff_penalty": 0.5,
    "episode_max_steps": 100,
    "lookback_seconds": 3.2,
    "episode_duration": 1.2
  },
  "training": {
    "max_episodes": 1000,
    "save_interval": 50,
    "evaluation_interval": 100,
    "early_stopping_patience": 200,
    "convergence_threshold": 0.95,
    "min_evaluation_episodes": 10,
    "target_success_rate": 0.8,
    "enable_curriculum_learning": false,
    "curriculum_stages": [
      {"episodes": 100, "noise_std": 0.3, "reward_scale": 0.5},
      {"episodes": 300, "noise_std": 0.2, "reward_scale": 0.8},
      {"episodes": 500, "noise_std": 0.1, "reward_scale": 1.0}
    ]
  },
  "monitoring": {
    "update_interval": 5.0,
    "save_plots": true,
    "plot_dpi": 150,
    "stats_dir": "models/ddpg",
    "log_level": "INFO",
    "enable_tensorboard": false,
    "tensorboard_log_dir": "runs/ddpg",
    "save_model_history": true,
    "max_saved_models": 10
  },
  "simulation": {
    "enable_physics_simulation": false,
    "simulation_noise": 0.1,
    "contact_probability": 0.7,
    "break_force_threshold": 25.0,
    "target_force_variation": 2.0,
    "response_delay_ms": 50
  },
  "logging": {
    "log_file": "logs/ddpg_system.log",
    "log_level": "INFO",
    "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "log_rotation": true,
    "max_log_size_mb": 10,
    "max_log_files": 5
  },
  "data_collection": {
    "save_episodes": true,
    "episode_save_dir": "data/episodes",
    "compress_episodes": true,
    "max_episode_files": 1000,
    "save_raw_eeg": true,
    "save_preprocessed_eeg": true,
    "save_tcp_data": true,
    "backup_interval_hours": 24
  },
  "performance": {
    "num_workers": 4,
    "prefetch_factor": 2,
    "pin_memory": true,
    "persistent_workers": false,
    "enable_mixed_precision": false,
    "gradient_clipping": 1.0,
    "memory_limit_gb": 8
  },
  "experimental": {
    "enable_multi_agent": false,
    "num_agents": 1,
    "enable_prioritized_replay": false,
    "priority_alpha": 0.6,
    "priority_beta": 0.4,
    "enable_noisy_networks": false,
    "enable_distributional_rl": false,
    "enable_rainbow_extensions": false
  }
}